{
  "lexicon": 1,
  "id": "social.moat.event",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "description": "Unified encrypted event record (messages, commits, invites, checkpoints)",
      "record": {
        "type": "object",
        "required": ["v", "tag", "ciphertext", "createdAt"],
        "properties": {
          "v": {
            "type": "integer",
            "description": "Schema version",
            "minimum": 1,
            "maximum": 1
          },
          "tag": {
            "type": "bytes",
            "description": "Rotating 16-byte tag derived from epoch for conversation clustering",
            "minLength": 16,
            "maxLength": 16
          },
          "ciphertext": {
            "type": "bytes",
            "description": "Padded encrypted payload containing kind, payload, epoch, and groupStableId",
            "maxLength": 65536
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Creation time"
          }
        }
      }
    }
  }
}
